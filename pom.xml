        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <spring.boot.version>2.0.3.RELEASE</spring.boot.version>
        <lombok.version>1.16.18</lombok.version>
        <druid.version>1.1.10</druid.version>
        <derby.version>10.14.2.0</derby.version>
        <sqlite.version>3.23.1</sqlite.version>
        <spring.boot.mybatis.version>1.3.1</spring.boot.mybatis.version>
        <mariadb.version>2.2.5</mariadb.version>
        <mysql.version>8.0.11</mysql.version>
        <log4j-version>2.10.0</log4j-version>
        <guava.version>23.0</guava.version>
        <protobuf-java-version>3.5.0</protobuf-java-version>
        <netty-version>4.1.18.Final</netty-version>
        <lucene.version>7.4.0</lucene.version>
    </properties>

