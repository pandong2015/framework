            </dependency>
            <dependency>
                <groupId>tech.pcloud</groupId>
                <artifactId>framework-utility-http</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>tech.pcloud</groupId>
